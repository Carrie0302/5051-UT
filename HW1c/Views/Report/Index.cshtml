@using HW1c.Models;
@model ReportViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Mike Koenig Report</h2>

<div class="container">
    <div class="row">
        <div class="col-3">
            <h2>Number of users</h2>
            <h2>@Model.NumberOfUsers</h2>
        </div>
        <div class="col">
            <div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Date</th>
                            <th scope="col">App Version</th>
                            <th scope="col">Phone ID</th>
                            <th scope="col">Evnet Type</th>
                            <th scope="col">Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var item in Model.LogViewModel.LogList)
                            {
                                <tr>
                                    <td>@Html.ActionLink(item.ID, "Read", new { id = item.ID },new { @class = "small" })</td>
                                    <td>@item.RecordedDateTime.ToShortDateString()</td>
                                    <td>@item.AppVersion</td>
                                    <td>@item.PhoneID</td>
                                    <td>@item.EventType</td>
                                    <td>@item.Value</td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
            <div>
                @Html.ActionLink("Create", "Create", "Report", new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
    <div class="row text-center">
        <div class="col">
            <img src="~/Content/Img/PieChart1.png" class="PieChartBox" />
        </div>
    </div>
</div>

